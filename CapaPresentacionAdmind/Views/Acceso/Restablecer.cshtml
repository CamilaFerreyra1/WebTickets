
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecer</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        #layoutAuthentication {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 10px 30px 0 rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #00bcd4;
            border-radius: 1rem 1rem 0 0;
            padding: 2rem 1.5rem;
        }

        .card-body {
            padding: 2rem 1.5rem;
        }

        .card-footer {
            background-color: rgba(0, 0, 0, 0.03);
            border-top: none;
            border-radius: 0 0 1rem 1rem;
            padding: 2rem 1.5rem;
        }

        .form-floating input,
        .form-floating label {
            width: 100%;
        }

        .form-floating input {
            border-radius: 0;
            border: none;
            border-bottom: 1px solid #ced4da;
            padding: 1rem 0;
            transition: border-color 0.2s;
            background-color: transparent;
        }

            .form-floating input:focus {
                border-color: #00bcd4;
                outline: none;
            }

        .form-floating label {
            color: #495057;
            font-size: 0.875rem;
            padding: 1rem 0;
        }

        .alert {
            border-radius: 0.25rem;
        }

        .btn-primary {
            background-color: #00bcd4;
            border: none;
            border-radius: 0.25rem;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            transition: background-color 0.2s;
        }

            .btn-primary:hover {
                background-color: #0097a7;
            }

        .small {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div id="layoutAuthentication">
        <div class="card shadow-lg">
            <div class="card-header text-white">
                <h3 class="text-center font-weight-light my-4">Recuperacion de contraseña</h3>
            </div>
            <div class="card-body">
                <div class="small mb-3 text-muted">Ingrese su dirección de correo electrónico y le enviaremos su nueva contraseña</div>
                <form action="@Url.Action("Restablecer","Acceso")" method="post">
                    <div class="form-floating mb-3">
                        <input class="form-control" name="correo" type="email" autocomplete="off" />
                        <label for="inputEmail">Email</label>
                    </div>
                    @{
                        if (ViewBag.Error != null)
                        {
                            <div class="form-floating mb-3">
                                <div class="alert alert-danger" role="alert">
                                    @ViewBag.Error
                                </div>
                            </div>
                        }
                    }
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="@Url.Action("Index","Acceso")">Regresar al login</a>
                        <button class="btn btn-primary" type="submit">Restablecer la contraseña</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                @*<div class="small"><a href="register.html">Need an account? Sign up!</a></div>*@
            </div>
        </div>
    </div>
</body>
</html>
